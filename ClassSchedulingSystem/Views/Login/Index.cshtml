@model IEnumerable<ClassSchedulingSystem.Models.CSS_DBEntities>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>
<br />
<br />
<div style="margin-left:5%" >
    <form method="post" class="form-horizontal">
        <div class="form-group mx-sm-3 mb-2">
            <label class="form-group row">ID:</label>
            <input type="text" name="id" class="form-control" placeholder="Student/Teacher ID" />
        </div>
        <div class="form-group mx-sm-3 mb-2">
            <label class="form-group row">Password:</label>
            <input type="password" name="pass" class="form-control" placeholder="Password" />
        </div>
        <input type="submit" value="Login" class="class="btn btn-primary mb-2"/>

    </form>
</div>
